{
  "name": "elmchemy",
  "version": "0.3.20",
  "description": "Write Elixir code using Elm-inspired syntax (elm-make compatible)",
  "directories": {
    "example": "example",
    "test": "tests"
  },
  "files": [
    "elmchemy",
    "elmchemy.js",
    "templates/*"
  ],
  "bin": {
    "elmchemy": "./elmchemy"
  },
  "scripts": {
    "test": "elm-test",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wende/elmchemy.git"
  },
  "bugs": {
    "url": "https://github.com/wende/elmchemy/issues"
  },
  "homepage": "https://github.com/wende/elmchemy#readme",
  "devDependencies": {
    "elm-format": "^0.6.1-alpha",
    "husky": "^0.13.3",
    "lint-staged": "^3.4.1"
  },
  "lint-staged": {
    "*.elm": [
      "node_modules/.bin/elm-format --yes",
      "git add"
    ]
  }
}
